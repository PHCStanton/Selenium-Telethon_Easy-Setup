# Selenium-Telethon Easy Setup Configuration Template

# Telegram Configuration
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Telegram Channels to Monitor (comma-separated)
TELEGRAM_CHANNELS=binary_trading_club,forex_signals,crypto_alerts

# Platform Credentials (add your platforms here)
# Example: BINANCE_USERNAME, BINANCE_PASSWORD
PLATFORM_USERNAME=your_username
PLATFORM_PASSWORD=your_password

# Chrome Configuration
CHROME_USER_DATA_DIR=./chrome_user_data
HEADLESS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/automation.log
